{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "cleanUrls": true,
  "trailingSlash": false,
  "routes": [
    {
      "src": "/llms.txt",
      "headers": { "Content-Type": "text/plain; charset=utf-8" },
      "continue": true
    },
    {
      "src": "/.llms.txt",
      "headers": { "Content-Type": "text/plain; charset=utf-8" },
      "continue": true
    },
    {
      "src": "/.llms-full.txt",
      "headers": { "Content-Type": "text/plain; charset=utf-8" },
      "continue": true
    },
    {
      "src": "/robots.txt",
      "headers": { "Content-Type": "text/plain; charset=utf-8" },
      "continue": true
    },
    {
      "src": "/sitemap.xml",
      "headers": { "Content-Type": "application/xml; charset=utf-8" },
      "continue": true
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
